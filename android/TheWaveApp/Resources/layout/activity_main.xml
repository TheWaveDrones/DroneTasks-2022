<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Wave App"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/txtTitle"
        android:layout_marginTop="30dp"
    />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="Intilize Bluetooth Connection"
        android:textAllCaps="false"
        android:backgroundTint="#333333"
        android:id="@+id/btnConnectionToggle"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="20dp"
            android:text="Get Distance"
            android:textAllCaps="false"
            android:backgroundTint="#333333"
            android:id="@+id/btnStartRelay"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
        />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="20dp"
            android:layout_marginLeft="5dp"
            android:text="Enable Continuous Data Streaming"
            android:textAllCaps="false"
            android:backgroundTint="#2583AF"
            android:id="@+id/btnToggleContinuous"
            android:layout_weight="0.5"
        />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Wave App"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/txtDistance"
        android:layout_marginTop="30dp"
    />

    

</LinearLayout>